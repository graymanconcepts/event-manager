---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - TechConf 2024">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">Contact Us</h1>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div>
          <h2 class="text-xl font-bold mb-4 dark:text-white">Conference Venue</h2>
          <p class="dark:text-gray-300">San Francisco Convention Center</p>
          <p class="dark:text-gray-300">747 Howard Street</p>
          <p class="dark:text-gray-300">San Francisco, CA 94103</p>
        </div>
        <div>
          <h2 class="text-xl font-bold mb-4 dark:text-white">Contact Information</h2>
          <p class="dark:text-gray-300">Email: info@techconf.com</p>
          <p class="dark:text-gray-300">Phone: (555) 123-4567</p>
          <p class="dark:text-gray-300">Hours: 9:00 AM - 5:00 PM PST</p>
        </div>
      </div>
      
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
          <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-primary focus:ring-primary" />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
          <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-primary focus:ring-primary" />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
          <textarea id="message" name="message" rows="4" required class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-primary focus:ring-primary"></textarea>
        </div>
        
        <button type="submit" class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-secondary transition-colors">
          Send Message
        </button>
      </form>
    </div>
  </div>
</Layout>