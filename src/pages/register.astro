---
import Layout from '../layouts/Layout.astro';

// Fetch ticket types and prices from API or define them here
const ticketTypes = [
  { id: 'standard', name: 'Standard Pass', price: 499, description: 'Full conference access' },
  { id: 'vip', name: 'VIP Pass', price: 799, description: 'Full conference access + VIP networking events' },
  { id: 'virtual', name: 'Virtual Pass', price: 199, description: 'Online access to all talks' }
];
---

<Layout title="Register for TechConf 2024">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Register for TechConf 2024</h1>
    
    <div class="max-w-2xl mx-auto">
      <form id="registration-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Personal Information -->
          <div class="md:col-span-2 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Personal Information</h2>
            <div class="space-y-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Full Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                />
              </div>
              
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Company</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                />
              </div>
              
              <div>
                <label for="dietary" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Dietary Requirements</label>
                <textarea
                  id="dietary"
                  name="dietary_requirements"
                  rows="2"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                ></textarea>
              </div>
            </div>
          </div>

          <!-- Ticket Selection -->
          <div class="md:col-span-2 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Select Your Ticket</h2>
            <div class="space-y-4">
              {ticketTypes.map((ticket) => (
                <div class="relative flex items-start p-4 border rounded-lg hover:border-primary cursor-pointer">
                  <div class="flex items-center h-5">
                    <input
                      type="radio"
                      name="ticket_type"
                      value={ticket.id}
                      required
                      class="h-4 w-4 text-primary border-gray-300 focus:ring-primary"
                    />
                  </div>
                  <div class="ml-3 flex justify-between w-full">
                    <div>
                      <label class="font-medium text-gray-700 dark:text-gray-300">
                        {ticket.name}
                      </label>
                      <p class="text-gray-500 dark:text-gray-400">{ticket.description}</p>
                    </div>
                    <div class="text-lg font-semibold text-primary">
                      ${ticket.price}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="flex justify-center">
          <button
            type="submit"
            class="px-8 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors font-semibold text-lg"
          >
            Register Now
          </button>
        </div>
      </form>

      <!-- Success/Error Message -->
      <div id="message" class="mt-6 text-center hidden">
        <p class="text-lg font-semibold"></p>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('registration-form');
  const messageDiv = document.getElementById('message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    try {
      const response = await fetch('http://localhost:3000/api/registrations', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      if (!response.ok) {
        throw new Error('Registration failed');
      }
      
      const result = await response.json();
      
      // Show success message
      if (messageDiv) {
        messageDiv.className = 'mt-6 text-center text-green-600 dark:text-green-400';
        messageDiv.querySelector('p')!.textContent = 'Registration successful! Check your email for confirmation.';
        messageDiv.classList.remove('hidden');
      }
      
      // Clear form
      form.reset();
      
      // Redirect to confirmation page after a delay
      setTimeout(() => {
        window.location.href = `/registration-confirmation?id=${result.id}`;
      }, 2000);
      
    } catch (error) {
      // Show error message
      if (messageDiv) {
        messageDiv.className = 'mt-6 text-center text-red-600 dark:text-red-400';
        messageDiv.querySelector('p')!.textContent = 'Registration failed. Please try again.';
        messageDiv.classList.remove('hidden');
      }
    }
  });
</script>
